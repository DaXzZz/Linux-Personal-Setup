{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "height": 5,
        "width": 10,
        "padding": {
            "top": 1
        }
    },
    "display": {
        "separator": " -> "
    },
    "modules": [
        "break",
        "break",

        // Title
        // {
        //     "type": "title",
        //     "keyWidth": 10,
        //     "format": "         {6}{7}{8}",
        //     "keyColor": "white"
        // },

        {
            "type": "custom",
            "format": "\u001b[37m         ryu@archlinux"
        },
        

        // ───── เส้นคั่น ─────
        {
            "type": "custom",
            "format": " ─────────────────────────── "
        },

        // 🖥️ Info
        {
            "type": "kernel",
            "key": " ",
            "keyColor": "white"
        },
        {
            "type": "wm",
            "key": " ",
            "keyColor": "white"
        },
        {
            "type": "shell",
            "key": " ",
            "keyColor": "white"
        },
        {
            "type": "terminal",
            "key": " ",
            "keyColor": "white"
        },

        // 📦 Memory
        {
            "type": "memory",
            "key": "󰍛 ",
            "keyColor": "white",
            "format": "{1} / {2}"
        },

        // ⏱️ Uptime
        {
            "type": "uptime",
            "key": "󰔛 ",
            "keyColor": "white"
        },

        // ───── เส้นคั่น ─────
        {
            "type": "custom",
            "format": " ─────────────────────────── "
        },

        // 🎨 สีวงกลม (white ทั้งหมด)
        {
            "type": "custom",
            "format": "   \u001b[37m              "
        },

        "break"
    ]
}
